    <section class="first-card">
        <div class="card">
            <div class="card-header">
                <div class="header-left">
                    <label for="date">Date</label>
                    <select name="date" id="daily_date">
                        <% daily.forEach((i) =>{  %>
                               <option value= <%=i.date %> > <%= i.date %> </option>
                            <% }) %>
                    </select>
                </div>
                <div class="header-center">
                    <label for="chart">ChartType</label>
                    <select name="chart" id="daily_type">
                        <option value="pie">Pie Chart</option>
                        <option value="bar">Bar chart</option>
                    </select>
                </div>
                <div class="header-right">
                    <button class="button" onclick="daily()" type="button">Fetch</button>
                </div>
            </div>
            
            <div class="card-body">
          <canvas id="myPieChart_daily"></canvas>
            </div>
        </div>
    </section>


   
    <section class="second-card">
      <div class="card">
          <div class="card-header">
              <div class="header-left">
                  <label for="date">Month</label>
                  <select name="date" id="date_month">
                    <% month.forEach((i)=>{ %>
                      <option value=<%=i.month %>> <%= i.month%></option>
                     <% }) %>
                  </select>
              </div>
              <div class="header-center">
                  <label for="chart">ChartType</label>
                  <select name="chart" id="chart_month">
                      <option value="pie">Pie Chart</option>
                      <option value="bar">Bar chart</option>
                  </select>
              </div>
              <div class="header-right">
                  <button class="button" onclick="monthly()">Fetch</button>
              </div>
          </div>
          
          <div class="card-body">
             <canvas id="myPieChart_month"></canvas>
          </div>
      </div>
  </section>

  
  <section class="third-card">
    <div class="card">
        <div class="card-header">
            <div class="header-left">
                <label for="date">year</label>
                <select name="date" id="date_year">
                    <% year.forEach((i)=>{ %>
                        <option value=<%=i.year %>> <%= i.year%></option>
                       <% }) %>
                </select>
            </div>
            <div class="header-center">
                <label for="chart">ChartType</label>
                <select name="chart" id="chart_year">
                    <option value="pie">Pie Chart</option>
                    <option value="bar">Bar chart</option>
                </select>
            </div>
            <div class="header-right">
                <button class="button" onclick="yearly()"  type="button">Fetch</button>
            </div>
        </div>
        
        <div class="card-body">
            <canvas id="myPieChart_year"></canvas>
        </div>
    </div>
</section>


